@model ContentViewModel
@using Humanizer;

@{
    ViewData["Title"] = "内容列表";
}

<h2>Index</h2>
<div class="panel panel-default todo-panel">
    <div class="panel panel-heading">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th><input type="checkbox" class="done-checkbox"/></th>
                <th>序号</th>
                <th>标题</th>
                <th>内容</th>
                <th>添加时间</th>
            </tr>
        </thead>
        @foreach (var item in Model.Contents)
        {
            <tr>
                <td>
                    <input type="checkbox" class="done-checkbox"/>
                </td>
                <td>@item.ID</td>
                <td>@item.title</td>
                <td>@item.content</td>
                <td>@item.add_time</td>
            </tr>
        }
    </table>
</div>

